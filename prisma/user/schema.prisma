generator client {
  provider = "prisma-client-js"
  output = "./generated/UserDataClient"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model users {
  id          Int        @id @default (autoincrement()) @map("id")
  account     varchar    @unique @map("account")
  password    varchar    @map("password")
  name        varchar    @map("name")
  cash        Int        @map("cash")
  created_at  timestamp  @map("created_at")


  rank rank?
  player_deck player_deck?
  inventory inventory[]

  @@map("users")
}

model rank {
  id          Int        @id @default (autoincrement()) @map("id")
  user_id     Int        @map("user_id")
  rankpoint   Int        @map("rankpoint")
  rank        Int        @map("rank")
  tier        varchar    @map("tier")
  win         Int        @map("win")
  draw        Int        @map("draw")
  lose        Int        @map("lose")


  users users @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("rank")
}


model inventory {
  id          Int       @id @default (autoincrement()) @map("id")
  user_id     Int       @map("user_id")
  player_id   Int       @map("player_id")   
  count       Int       @map("count")

  users users @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("inventory")
}


model player_deck {
  id          Int       @id @default (autoincrement()) @map("id")
  user_id     Int       @map("user_id")
  player_id   Int       @map("player_id")   


  users users @relation(fields: [user_id], references: [id], onDelete: Cascade)
  
  @@map("player_deck")
}
